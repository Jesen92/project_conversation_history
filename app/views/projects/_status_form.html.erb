<%= form_with model: project, scope: :project, url: projects_statuses_update_path(id: project), method: :patch do |form| %>
  <div class="mt-3 row" style="max-width: 14rem;">
    <div class="col-md-4">
      <%= form.label :status, class: 'form-label badge bg-primary text-wrap' %>
    </div>
    <div class="col-md-8">
      <%= form.select :status, Project::STATUSES.map {|status| [status.humanize, status]}, {}, class: 'form-control', onchange: "this.form.submit();" %>
    </div>
  </div>
<% end %>
